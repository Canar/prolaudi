ost(mixolydian,[0,2,4,5,7,9,10]).
ost(aeolian,   [0,2,3,5,7,8,10]).
ost(locrian,   [0,1,3,5,6,8,10]).

ost(pentatonic, [0,2,4,7,9]). % jesus loves me scale (pentatonic!)

